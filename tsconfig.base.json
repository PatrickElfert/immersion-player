      "@immersion-player/feature-flashcard-templates": ["libs/feature-flashcard-templates/src/index.ts"],
      "@immersion-player/feature-known-words-ui": ["libs/feature-known-words-ui/src/index.ts"],
      "@immersion-player/feature-media-player-ui": ["libs/feature-media-player-ui/src/index.ts"],
      "@immersion-player/feature-settings": ["libs/feature-settings/src/index.ts"],
      "@immersion-player/feature-settings-ui": ["libs/feature-settings-ui/src/index.ts"],
      "@immersion-player/shared-flashcard-templates": ["libs/shared-flashcard-templates/src/index.ts"],
      "@immersion-player/shared-types": ["libs/shared-types/src/index.ts"],
      "@immersion-player/shared-ui": ["libs/shared-ui/src/index.ts"],
      "@immersion-player/shared-utils": ["libs/shared-utils/src/index.ts"]
